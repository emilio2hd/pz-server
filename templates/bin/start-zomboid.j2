#!/bin/bash

printf "Starting PZ Server...\n"

{% set pz_start_str = zomboid_server_dir + "/start-server.sh -Duser.home=" + pz_server_dir + ' -- ' %}
{% set pz_start_str = pz_start_str + "-servername " + zomboid_servername + ' ' %}
